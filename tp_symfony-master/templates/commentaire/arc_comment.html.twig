{% extends 'base.html.twig' %}
{% block title %}Liste des commentaires{% endblock %}
{% block titre %}Liste des commentaires de {{article.titre|title}}{% endblock %}


{% block body %}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Auteur</th>
            <th scope="col">Commenatire</th>

        </tr>
    </thead>
    
    <tbody>
        {% for comment in commentaires %}
        <tr>
            <td>{{comment.id}}</td>
            <td>{{comment.auteur|capitalize}}</td>
            <td>{{comment.message}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}