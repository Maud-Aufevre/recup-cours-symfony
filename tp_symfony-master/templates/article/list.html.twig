{% extends 'base.html.twig' %}
{% block title %}Liste des articles{% endblock %}
{% block titre %}Liste des articles{% endblock %}


{% block body %}

<div class="d-flex justify-content-between">
    <div>
    <form action="" method="post">
        <div class="form-group form-inline">
            <input placeholder="search..." type="text" id="search" name="search" class="form-control">
            <button type="submit" class="btn btn-secondary">search</button>
        </div>
    </form>
    </div>

    <div>
        <a href="{{ path('article_add')}}" class="btn btn-warning">
            <span class="fa fa-plus">Ajouter</span>
        </a>
    </div>
</div>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th scope="col">Parution</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Commentaires</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{article.titre|title}}</td>
            <td>{{article.auteur|capitalize}}</td>
            <td>{{article.parution|date("m/d/Y", "Europe/Paris")}}</td>
            <td><img src="{{asset(article.image)}}" alt=""></td>
            <td>{{article.description}}</td>
            <td>
                <a href="{{ path('arc_comm',{'id':article.id}) }}" class="btn btn-success">Commentaires</a>
            </td>
            <td>
                <a href="{{ path('article_update',{'id':article.id}) }}" class="btn btn-info">Edit</a>
                <a href="{{ path('article_delete',{'id':article.id}) }}" class="btn btn-danger">Delete</a>
            </td>  
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}